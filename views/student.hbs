<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{data.firstName}} {{data.lastName}} - Student: {{data.studentNum}}</h2>
        <hr />

        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{data.studentNum}}" />
            <div class="form-section">
                <h2>Personal Information</h2>
                <div class="form-row">
                    <div class="form-column">
                        <label for="firstname">First Name</label>
                        <input type="text" id="firstname" name="firstName" value="{{data.firstName}}" required>
                    </div>
                    <div class="form-column">
                        <label for="lastname">Last Name</label>
                        <input type="text" id="lastname" name="lastName" value="{{data.lastName}}" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-column">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="{{data.email}}" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-column">
                        <label for="addressStreet">Address (Street)</label>
                        <input type="text" id="addressStreet" name="addressStreet" value="{{data.addressStreet}}" required>
                    </div>
                    <div class="form-column">
                        <label for="addressCity">Address (City)</label>
                        <input type="text" id="addressCity" name="addressCity" value="{{data.addressCity}}" required>
                    </div>
                    <div class="form-column">
                        <label for="addressProvince">Address (Province)</label>
                        <input type="text" id="addressProvince" name="addressProvince" value="{{data.addressProvince}}" required>
                    </div>
                </div>
            </div>
            <div class="form-section">
                <h2>Academic Information</h2>
                <div class="form-row">
                    <div class="form-column">
                        <label for="TA">College Employment</label>
                        <label class="checkbox-label">
                            <input type="checkbox" id="teachingAssistant" name="TA" value="teachingAssistant" {{#if data.TA}}checked{{/if}}>
                            Teaching Assistant
                        </label>
                    </div>
                    <div class="form-column">
                        <label for="status">Enrollment Status</label>
                        <label class="checkbox-label">
                            <input type="radio" id="fullTime" name="status" value="Full Time" {{#equal data.status "Full Time" }}checked{{/equal}} required>
                            Full Time
                        </label>
                        <label class="checkbox-label">
                            <input type="radio" id="partTime" name="status" value="Part Time" {{#equal data.status "Part Time" }}checked{{/equal}} required>
                            Part Time
                        </label>
                    </div>
                    <div class="form-column">
                        <label for="course">Enrolled in Course</label>
                        <select id="course" name="course" required>
                            <option value="1" {{#equal data.course "1" }}selected{{/equal}}>Relational Database Design and Implementation</option>
                            <option value="2" {{#equal data.course "2" }}selected{{/equal}}>Java Programming</option>
                            <option value="3" {{#equal data.course "3" }}selected{{/equal}}>Introduction to Cloud Computing</option>
                            <option value="4" {{#equal data.course "4" }}selected{{/equal}}>Database Administration and Management</option>
                            <option value="5" {{#equal data.course "5" }}selected{{/equal}}>Web Programming</option>
                            <option value="6" {{#equal data.course "6" }}selected{{/equal}}>Applied Capstone Project</option>
                            <option value="7" {{#equal data.course "7" }}selected{{/equal}}>Database Connectivity Using Java</option>
                            <option value="8" {{#equal data.course "8" }}selected{{/equal}}>Accessing Big Data</option>
                            <option value="9" {{#equal data.course "9" }}selected{{/equal}}>Datawarehousing</option>
                            <option value="10" {{#equal data.course "10" }}selected{{/equal}}>Security in Databases and Web Applications</option>
                            <option value="11" {{#equal data.course "11" }}selected{{/equal}}>Work Term Preparation (Work-Integrated Learning option only)</option>
                        </select>
                    </div>
                </div>
            </div>

            <hr />

            <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
        </form>
    </main>
</div>
